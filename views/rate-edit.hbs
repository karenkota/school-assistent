<section id="Edit-rate">
  <figure class="design-edit"><img src="/images/logoEducation.png"></figure>
  <form action="/teacher/{{rate._id}}/edit" method="post" id="edit-rate-form">
    <div>Student: <span>{{rate.student.name}}></span></div>
    <div>Teacher: <span>{{rate.teacher.name}}</span></div>
    <div>Subject: <span>{{rate.subjects.name}}</span></div>
    <label for="exam">
      Exam:
      <input type="text" name="exam" id="exam" value="{{rate.exam}}">
    </label>
    <label for="rate">
      Rate:
      <input type="number" value='{{rate.rate}}' min="0" max="10" name="rate" id="rate">
    </label>
    <button class="send-btn" type="submit">Edit Rate</button>
  </form>
</section>
